{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "ESNext",                       // ECMAScript target version
    "module": "CommonJS",                  // Module code generation method (CommonJS for Node.js)
    "esModuleInterop": true,               // Enables compatibility with ES modules
    "strict": true,                        // Enables strict type-checking options
    "skipLibCheck": true,                  // Skip type checking of declaration files (improves performance)
    "forceConsistentCasingInFileNames": true,  // Ensures consistent casing in file names
    "outDir": "./dist",                    // Output directory for compiled JS files
    "baseUrl": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmitOnError": true
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
